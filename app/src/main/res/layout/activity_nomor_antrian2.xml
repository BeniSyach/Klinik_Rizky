<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientbackground"
    tools:context=".nomor_antrian">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:padding="16dp">

        <com.rackspira.kal.lib.CustomTextView
            app:fontPath="fonts/TypoGraphica_demo.otf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:text="Klinik Rizky"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
        <LinearLayout
            android:id="@+id/layout_nomor_pasien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="50dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_nomor_now"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="160dp"
                android:layout_height="190dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Antrian Sekarang"
                        android:gravity="center"
                        android:fontFamily="@font/mregular"
                        android:layout_marginTop="13.5dp"
                        android:textSize="15dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="10dp"
                        android:background="@color/lightgray" />
                    <TextView
                        android:id="@+id/tv_nomor_now"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:gravity="center"
                        android:textSize="50dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_nomor_anda"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="160dp"
                android:layout_height="190dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nomor Antrian Anda"
                        android:gravity="center"
                        android:fontFamily="@font/mregular"
                        android:textSize="15dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="10dp"
                        android:background="@color/lightgray" />
                    <TextView
                        android:id="@+id/tv_nomor_anda"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:gravity="center"
                        android:textSize="50dp"/>
                    <TextView
                        android:id="@+id/tv_ruangperiksa_anda"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ruang Periksa Disini"
                        android:fontFamily="@font/mregular"
                        android:textAlignment="center"
                        android:layout_marginTop="5dp"
                        android:textSize="15dp"/>

                    <TextView
                        android:id="@+id/tv_waktu_anda"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:fontFamily="@font/mregular"
                        android:text="Waktu Periksa Disini"
                        android:layout_marginTop="10dp"
                        android:textSize="15dp"/>


                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mregular"
            android:text="Dimohon Datang 30 Menit Lebih Awal"
            android:layout_marginTop="70dp"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mregular"
            android:text="TERIMA KASIH"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/btnkembali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mregular"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_rounded_facebook"
            android:text="Kembali"
            android:textSize="15dp" />

    </LinearLayout>



</RelativeLayout>