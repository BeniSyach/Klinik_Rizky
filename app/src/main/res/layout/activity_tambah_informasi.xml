<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityTambahInformasi"
    android:background="@drawable/gradientbackground"
    android:orientation="vertical">


    <com.rackspira.kal.lib.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Informasi"
        android:textAlignment="center"
        android:textSize="40dp"
        app:fontPath="fonts/TypoGraphica_demo.otf"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mregular"
            android:textSize="30dp"
            android:text="Masukan Informasi  :"/>

    </LinearLayout>

    <EditText
        android:id="@+id/edit_informasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:fontFamily="@font/mregular"
        android:hint="klik disini"
        android:layout_marginBottom="20dp"
        android:inputType="text"/>

    <Button
        android:id="@+id/btn_savedatainformasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_rounded_facebook"
    android:fontFamily="@font/mregular"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        android:text="Update" />

    <Button
        android:id="@+id/btn_kembaliinformasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_rounder_google"
        android:fontFamily="@font/mregular"
        android:textSize="20dp"
        android:text="Kembali" />

</LinearLayout>