<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/relativeLayout"
    android:background="@drawable/animation_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lupa_password">

    <TextView
        android:id="@+id/judulteks"
        android:layout_margin="40dp"
        android:textSize="40sp"
        android:fontFamily="casual"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:text="Lupa Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <androidx.cardview.widget.CardView
            android:background="@android:color/white"
            android:layout_gravity="center"
            app:cardCornerRadius="10dp"
            android:id="@+id/input"
            app:cardUseCompatPadding="true"
            android:layout_marginTop="150dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:gravity="center"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/etemailkonfirmasi"
                    android:hint="Masukkan Email ganti password"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:layout_marginEnd="8dp"
                    android:background="@android:color/transparent"
                    android:ems="19"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.08"
                    app:layout_constraintStart_toEndOf="@+id/imageView3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.31" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btlupakonfirmasi"
        android:textAllCaps="false"
       android:layout_below="@+id/input"
        android:minWidth="100dp"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_rounder_google"
        android:text="Konfirmasi"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>